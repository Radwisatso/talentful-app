{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/server/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/server/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/server",
  "projects": {
    "attendance": {
      "type": "application",
      "root": "apps/attendance",
      "entryFile": "main",
      "sourceRoot": "apps/attendance/src",
      "compilerOptions": {
        "tsConfigPath": "apps/attendance/tsconfig.app.json"
      }
    },
    "attendance-api-gateway": {
      "type": "application",
      "root": "apps/attendance-api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/attendance-api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/attendance-api-gateway/tsconfig.app.json"
      }
    },
    "contracts": {
      "type": "library",
      "root": "libs/contracts",
      "entryFile": "index",
      "sourceRoot": "libs/contracts/src",
      "compilerOptions": {
        "tsConfigPath": "libs/contracts/tsconfig.lib.json"
      }
    },
    "employee": {
      "type": "application",
      "root": "apps/employee",
      "entryFile": "main",
      "sourceRoot": "apps/employee/src",
      "compilerOptions": {
        "tsConfigPath": "apps/employee/tsconfig.app.json"
      }
    },
    "server": {
      "type": "application",
      "root": "apps/server",
      "entryFile": "main",
      "sourceRoot": "apps/server/src",
      "compilerOptions": {
        "tsConfigPath": "apps/server/tsconfig.app.json"
      }
    }
  }
}